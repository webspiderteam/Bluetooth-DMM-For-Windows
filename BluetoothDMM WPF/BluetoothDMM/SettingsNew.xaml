                                    <TextBlock Margin="0,10,0,10" TextAlignment="Right" Text="{lex:LocText ClientID}" Width="155"/>
                                </Canvas>
                                <TextBox x:Name="txtClientID" HorizontalAlignment="Left" Margin="160,10,0,0" Text="{Binding Source={x:Static settings:MQTT.Default}, Path=ClientId, Mode=TwoWay}" Width="265"/>
                                <Canvas>
                                    <TextBlock Margin="0,10,0,10" TextAlignment="Right" Text="{lex:LocText TargetTopic}" Width="155"/>
                                </Canvas>
                                <TextBox HorizontalAlignment="Left" Margin="160,10,0,0" Text="{Binding Source={x:Static settings:MQTT.Default}, Path=Topic, Mode=TwoWay}" Width="265"/>
                                <Button HorizontalAlignment="Left" Content="{lex:LocText Values}" Width="84" Margin="160,5,0,0" Click="btnValues_Click" Height="20"/>
                                <CheckBox x:Name="chkAddMac" Content="{lex:LocText AddMacAdress}" Margin="160,10,0,0"  IsChecked="{Binding Source={x:Static settings:MQTT.Default}, Path=addMac, Mode=TwoWay}"/>
                                <CheckBox x:Name="chkUseSeperated" Content="Send Each Values One By One" Margin="160,10,0,0"  IsChecked="{Binding Source={x:Static settings:MQTT.Default}, Path=UseSeperatedValues, Mode=TwoWay}"/>
                                <Canvas>
                                    <TextBlock Width="155" Margin="0,10,0,10" TextAlignment="Right" Text="{lex:LocText ClientID}"/>
                                </Canvas>
                                <TextBlock Margin="160,10,0,0">
                                    <Run Text="{Binding Text, ElementName=txtClientID}"/>
                                    <InlineUIContainer>
                                        <TextBlock Visibility="{Binding IsChecked, Converter={StaticResource Boolean2VisibilityConverter},ConverterParameter='-1', ElementName=chkAddMac}" Text="\ AA_BB_CC_DD_EE_FF"/>
                                    </InlineUIContainer>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Style="{DynamicResource ResourceKey=styleTabItemDefault}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Margin="-15,0,0,0">
                        <Viewbox Width="35" Height="40" Child="{StaticResource UpdatesLogo}"/>
                        <TextBlock Text="{lex:Loc Updates}" VerticalAlignment="Center" FontSize="12" Foreground="White" Padding="5"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Border IsEnabled="True" BorderBrush="#FF1F1E1F" BorderThickness="1" CornerRadius="4" Padding="5,5,10,10" Margin="0,3,5,3">
                            <StackPanel>
                                <TextBlock Margin="0,0,0,10"  FontWeight="Bold" Foreground="AntiqueWhite" Text="{lex:Loc Updates}"/>
                                <CheckBox Margin="50,0,0,0" Content="{lex:Loc CheckUpdatesStartup}" IsChecked="{Binding Source={x:Static settings:Settings.Default}, Path=CheckUpdates, Mode=TwoWay}"/>
                                <Canvas>
                                        <Button x:Name="btnCheckUpdates" Margin="50,10,0,0" Content="{lex:Loc CheckUpdates}" Width="190" Click="Button_Click"/>
                                </Canvas>
                                <StackPanel x:Name="pnlBusy" Orientation="Horizontal" Visibility="Hidden">
                                    <Image Margin="250,0,0,0" Height="26" Source="Assets/Spinner.gif" RenderTransformOrigin="0.5, 0.5">
                                        <Image.RenderTransform>
                                            <RotateTransform x:Name="noFreeze" />
                                        </Image.RenderTransform>
                                        <Image.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Image.RenderTransform).(RotateTransform.Angle)" 
                                                                         From="0" To="360" Duration="0:0:1.5" RepeatBehavior="Forever" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Image.Triggers>
                                    </Image>
                                    <TextBlock Margin="5,12,0,10" Text="Checking for Updates. Please wait..." />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border x:Name="boxLatest" Visibility="Collapsed" MaxHeight="120" BorderBrush="#FF1F1E1F" BorderThickness="1" CornerRadius="4" Padding="5,5,10,2" Margin="0,3,5,3" d:Visibility="Visible">
                            <StackPanel>
                                <Canvas >
                                    <TextBlock x:Name="tpcLatest" Margin="0,0,0,0"   Foreground="AntiqueWhite">
                                        <Run Text="{lex:Loc LatestVersion}" FontWeight="Bold"/>
                                        <TextBlock Name="txtCurrentVersion"/>
                                    </TextBlock>
                                </Canvas>
                                <StackPanel Name="pnlLinks" Visibility="Hidden" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="{lex:Loc DownloadLinks}" />
                                    <TextBlock x:Name="txtLinks" Margin="10,0,0,0" Padding="0,0,15,0"/>
                                </StackPanel>
                                <ScrollViewer Margin="0,5,0,0" MaxHeight="90" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="txtLatest" TextWrapping="Wrap" Margin="50,0,0,3"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                        <Border Visibility="Collapsed" x:Name="boxChangeLog" MaxHeight="170" IsEnabled="True" BorderBrush="#FF1F1E1F" BorderThickness="1" CornerRadius="4" Padding="5,5,10,2" Margin="0,3,5,3" d:Visibility="Visible">
                            <StackPanel>
                                <TextBlock x:Name="tpcChangeLog" Margin="0,0,0,10"  FontWeight="Bold" Foreground="AntiqueWhite" Text="{lex:Loc ChangeLog}"/>
                                <ScrollViewer  MaxHeight="135" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="txtChangeLog" TextWrapping="Wrap" Margin="50,0,0,3"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                        <WebBrowser Name="browser" Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <StackPanel x:Name="vertest" Height="20" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="5" Visibility="Collapsed">
            <CheckBox x:Name="test" Content="Use Fake Version value:" Margin="2"/>
            <TextBox  Width="20" x:Name="v1" Text="1" Margin="2"/>
            <TextBox  Width="20" x:Name="v2" Text="21" Margin="2"/>
            <TextBox  Width="20" x:Name="v3" Text="0" Margin="2"/>
        </StackPanel>
        <Button x:Name="btnSave" Content="{lex:LocText Save}" Width="100" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,10" Click="btnSave_Click"/>
        <Popup x:Name="Renamer"
                       StaysOpen="False" 
                       AllowsTransparency="True"
                       Placement="Center"
                       VerticalOffset="-30"
                       HorizontalOffset="0"
                       Height="102" Width="400"
                       PopupAnimation="Fade">
            <Border CornerRadius="8" Background="Black" Height="102" Width="340">
                <Grid>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBox  Margin="15,10,20,10" x:Name="EditBox" FontSize="18" Height="40" Width="300" Text="sdads" VerticalContentAlignment="Center"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="EditDevTypeCmb" Width="240" Height="30" Margin="15,0,10,0">
                                <ComboBoxItem Content="Aneng, B-Side, Zoyi Type" IsSelected="True"/>
                                <ComboBoxItem Content="Owon Old Type (B35T e.g)"/>
                                <ComboBoxItem Content="Owon Plus Type (B35t+, B41t+ e.g)"/>
                                <ComboBoxItem Content="AICARE Devices (AP-570C-APP e.g Inteligent Clamp Meter app)"/>
                            </ComboBox>
                            <Button Width="50" Height="30" Content="{lex:LocText Ok}" Click="btnOk_Click"/>
                        </StackPanel>
                        <TextBlock x:Name="Key"  Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</Window>
